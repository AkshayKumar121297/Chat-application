<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#DA9595">
    
    <ImageView
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:id="@+id/apnachaticon"
    android:src="@drawable/apnachat"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="400dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appname"
        android:text="Apna Chat"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/apnachaticon"
        app:layout_constraintEnd_toEndOf="@id/apnachaticon"
        app:layout_constraintTop_toBottomOf="@id/apnachaticon"
        android:textSize="30sp"
        android:textColor="#4E1717"
        android:layout_marginTop="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:id="@+id/username"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/appname"
        android:layout_marginTop="20dp"
        android:hint="Email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_background"
        android:id="@+id/userpassword"
        app:layout_constraintTop_toBottomOf="@id/username"
        android:layout_marginTop="20dp"
        android:hint="Password"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userpassword"
        app:layout_constraintStart_toStartOf="@id/userpassword"
        app:layout_constraintEnd_toEndOf="@id/userpassword"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:id="@+id/btnlogin" />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnlogin"
        app:layout_constraintStart_toStartOf="@id/btnlogin"
        app:layout_constraintEnd_toEndOf="@id/btnlogin"
        android:layout_marginTop="10dp"
        android:text="SignUp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:id="@+id/btnsignup"/>

</androidx.constraintlayout.widget.ConstraintLayout>