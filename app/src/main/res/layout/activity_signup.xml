<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/apnachaticon"
        android:src="@drawable/apnachat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="400dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appname"
        android:text="Apna Chat"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/apnachaticon"
        app:layout_constraintEnd_toEndOf="@id/apnachaticon"
        app:layout_constraintTop_toBottomOf="@id/apnachaticon"
        android:textSize="30sp"
        android:textColor="#4E1717" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:id="@+id/name"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/appname"
        android:layout_marginTop="20dp"
        android:hint="Name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:id="@+id/username1"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="20dp"
        android:hint="Email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_background"
        android:id="@+id/userpassword1"
        app:layout_constraintTop_toBottomOf="@id/username1"
        android:layout_marginTop="20dp"
        android:hint="Password"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userpassword1"
        app:layout_constraintStart_toStartOf="@id/userpassword1"
        app:layout_constraintEnd_toEndOf="@id/userpassword1"
        android:layout_marginTop="10dp"
        android:text="Submit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:id="@+id/btnsubmit"/>

</androidx.constraintlayout.widget.ConstraintLayout>